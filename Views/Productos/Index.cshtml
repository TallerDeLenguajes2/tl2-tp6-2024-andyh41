@model List<Productos>

<section>
    <h2 class="border-bottom mb-4">Productos</h2>

    <div class="text-center">
    <a asp-controller="Productos" asp-action="Crear" class="btn btn-success">Crear Producto</a>
    </div>

    <table>
        <caption> Listado de Productos </caption>

        <thead>
            <tr>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Productos prod in Model )
            {
            <tr>
                <td>@prod.Descripcion</td>
                <td>$ @prod.Precio</td>
                <td>
                    <a asp-controller="Productos" asp-action="Modificar" asp-route-id="@prod.IdProducto" class="btn btn-warning">Modificar</a>
                    <a asp-controller="Productos" asp-action="Eliminar" asp-route-id="@prod.IdProducto" class="btn btn-danger">Eliminar</a>    
                </td>
            </tr>
            }
        </tbody>

    </table>

    
</section>

