            <label asp-for="NombreDestinatario">Nombre del destinatario</label>
            <input asp-for="NombreDestinatario" class="form-control" required />
        </div>
        <div class="form-group mb-2">
            <label asp-for="Fecha">Fecha de Creaci√≥n</label>
            <input asp-for="Fecha" class="form-control" disabled />
