@{
    var username = Context.Session.GetString("Username");
    var role = Context.Session.GetString("Role");
}

@model PresupuestoViewModel

@if (string.IsNullOrEmpty(username))
{
    <script>
        window.location.href = '@Url.Action("Index", "Login")';
    </script>
}
else
{
    @if (role == "Administrador"){
        <section>
            <h2>Modificar Presupuesto</h2>

            <form asp-action="Modificar" method="post">
                <input type="hidden" asp-for="PresupuestoId" />

                <div class="form-group">
                    <label asp-for="IdUsuario">Cliente</label>
                    <select asp-for="IdUsuario" class="form-control" asp-items="Model.Usuario">
                        <option value="">Seleccione un cliente</option>
                    </select>
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Fecha">Fecha de Creaci√≥n</label>
                    <input asp-for="Fecha" class="form-control" readonly />
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </section>

    }
}

