@model PresupuestoViewModel

<section>

    <h2>Modificar Presupuesto</h2>

    <form asp-action="Modificar" method="post">
        <input type="hidden" asp-for="PresupuestoId" />

        <div class="form-group">
            <label asp-for="ClienteId">Cliente</label>
            <select asp-for="ClienteId" class="form-control" asp-items="Model.Clientes">
                <option value="">Seleccione un cliente</option>
            </select>
            <span asp-validation-for="ClienteId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Fecha">Fecha</label>
            <input asp-for="Fecha" class="form-control" type="date" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>

</section>