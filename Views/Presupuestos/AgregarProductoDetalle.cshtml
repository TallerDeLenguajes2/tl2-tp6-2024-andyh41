@{
    ViewData["Title"] = "Agregar productos";
    var productos = (IEnumerable<SelectListItem>) ViewData["Productos"];
}
@model int

<form asp-controller="Presupuestos" asp-action="AgregarProductoDetalle" method="post" class="container mt-4">

    <input type="hidden" name="idPresupuesto" id="idPresupuesto" value="@Model">
    
    <div class="mb-3">
        <label for="Producto">Seleccione el producto:</label>
        <select name="producto" id="producto" asp-items="@productos" class="form-select"></select>
    </div>

    <div class="form-group">
        <label for="cantidad" class="form-label">Cantidad</label>
        <input name="cantidad" id="cantidad" class="form-control" type="number" required min="1" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Agregar Producto</button>
</form> 
