@model PresupuestoViewModel

<section>

    <h2 class="border-bottom my-3 w-50 mx-auto">Crear Presupuesto</h2>

    <form  asp-controller= "Presupuestos" asp-action="Crear" method="post">
        <div class="form-group">
            <label asp-for="IdUsuario">Cliente</label>
            <select asp-for="IdUsuario" class="form-control" asp-items="Model.Usuario">
                <option value="">Seleccione un cliente</option>
            </select>
            <span asp-validation-for="IdUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="FechaCreacion">Fecha de creacion (yyyy-MM-dd):</label>
            <input asp-for="Fecha" class="form-control" required>
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Crear Presupuesto</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
    
</section>

