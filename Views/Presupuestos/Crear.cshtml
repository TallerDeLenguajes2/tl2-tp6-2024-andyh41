@model PresupuestoViewModel


<section>
    <h2>Crear Presupuesto</h2>

    <form asp-action="Crear" method="post">
        
        <div class="form-group">
            <label asp-for="ClienteId">Cliente</label>
            <select asp-for="ClienteId" class="form-control" asp-items="Model.Clientes">
                <option value="">Seleccione un cliente</option>
            </select>
            <span asp-validation-for="ClienteId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Fecha">Fecha</label>
            <input asp-for="Fecha" class="form-control" type="date" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>
        
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Crear Presupuesto</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</section>

