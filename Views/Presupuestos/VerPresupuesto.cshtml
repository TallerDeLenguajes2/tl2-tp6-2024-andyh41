
@model Presupuestos

<section>

    <div class="mb-4">
        <h2 class="border-bottom mb-4">Detalle de presupuesto</h2>
        <p><strong>Nombre del Destinatario:</strong> @Model.NombreDestinatario</p>
        <p><strong>Fecha de Creacion:</strong> @Model.Fecha</p>
    </div>

    <div class="text-center">
        
        <a asp-controller="Presupuestos" asp-action="AgregarProductoDetalle" asp-route-id="@Model.IdPresupuesto" class="btn btn-success">Crear Detalle</a>
        <a asp-controller="Presupuestos" asp-action="Index" class="btn btn-info">Ir al Inicio</a>
        
    </div>

    </div>
    @if (Model.Detalle != null && Model.Detalle.Any())
    {
        <table>
            <caption> Listado de Detalles </caption>

            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                </tr>
            </thead>

            <tbody>
                @foreach (PresupuestoDetalle det in Model.Detalle )
                {
                <tr>
                    <td>@det.Producto.Descripcion</td>
                    <td>@det.Producto.Precio</td>
                    <td>@det.Cantidad</td>
                </tr>
                }   
            </tbody>
            <tfoot>
                    <tr>
                        <th colspan="3" class="text-start">Subtotal del Presupuesto</th>
                        <th>@Model.MontoPresupuesto()</th>
                    </tr>
                    <tr>
                        <th colspan="3" class="text-start">Total del Presupuesto con IVA</th>
                        <th>@Model.MontoPresupuestoConIva()</th>
                    </tr>
            </tfoot>

        </table>
    }
    else
    {
        <p class="text-center text-muted">No hay detalles en el presupuesto.</p>
    }
</section>